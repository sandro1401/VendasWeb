@model VendasWeb.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h1>Create</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="row">
            <input type="hidden" asp-for="@Model.IdUsuario" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CPF" class="control-label"></label>
                <input asp-for="@Model.CPF" class="form-control" />
                <span asp-validation-for="@Model.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DataNascimento" class="control-label"></label>
                <input asp-for="@Model.DataNascimento" class="form-control" />
                <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Nome" class="control-label"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            @if(!Context.Request.RouteValues.ContainsKey("id"))
            {
                <div class="form-group">
                    <label asp-for="@Model.Senha" class="control-label"></label>
                    <input asp-for="@Model.Senha" class="form-control" type="password" />
                    <span asp-validation-for="@Model.Senha" class="text-danger"></span>
                </div>
            }
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

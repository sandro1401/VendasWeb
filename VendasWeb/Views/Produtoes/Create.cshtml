@model VendasWeb.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produtos";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-formaction="@Model.IdProduto" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nome" class="control-label"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Estoque" class="control-label"></label>
                <input asp-for="@Model.Estoque" class="form-control" />
                <span asp-validation-for="@Model.Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Preco" class="control-label"></label>
                <input asp-for="@Model.Preco" class="form-control" />
                <span asp-validation-for="@Model.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IdCategoria" class="control-label"></label>
                <select asp-for="@Model.IdCategoria" class="form-control" 
                asp-items="ViewBag.IdCategoria"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
